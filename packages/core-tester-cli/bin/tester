#!/usr/bin/env node

const app = require('commander')

app.version(require('../package.json').version)

app
  .command('transactions')
  .description('send multiple transactions')
  .option('-n, --number <number>', 'number of transactions', 10)
  .option('-c, --copy', 'copy the transactions to the clipboard', false)
  .action(async (options) => require('../lib/commands/transactions')(options))

app
  .command('signatures')
  .description('create wallets with second signature')
  .option('-n, --number <number>', 'number of wallets', 10)
  .option('-c, --copy', 'copy the transactions to the clipboard', false)
  .action(async (options) => require('../lib/commands/signatures')(options))

app
  .command('delegates')
  .description('create multiple delegates')
  .option('-n, --number <number>', 'number of delegates', 10)
  .option('-c, --copy', 'copy the transactions to the clipboard', false)
  .action(async (options) => require('../lib/commands/delegates')(options))

app
  .command('votes')
  .description('create multiple votes for a delegate')
  .option('-n, --number <number>', 'number of votes', 10)
  .option('-d, --delegate <delegate>', 'delegate public key')
  .option('-q, --quantity <number>', 'quantity of delegates to vote for if `-d` is omitted', 1)
  .option('-c, --copy', 'copy the transactions to the clipboard', false)
  .action(async (options) => require('../lib/commands/votes')(options))

app
  .command('multi-signatures')
  .description('create multiple multisig wallets')
  .option('-n, --number <number>', 'number of multisig wallets', 10)
  .option('-m, --min <number>', 'minimum number of signatures per transaction')
  .option('-l, --lifetime <number>', 'lifetime of transaction', 72)
  .option('-q, --quantity <number>', 'number of signatures per wallet', 2)
  .option('-c, --copy', 'copy the transactions to the clipboard', false)
  .action(async (options) => require('../lib/commands/multi-signature')(options))

app
  .command('*')
  .action(env => {
    app.help()
    process.exit(0)
  })

app.parse(process.argv)
