{
  "private": true,
  "name": "@arkecosystem/core",
  "description": "Revamped ark-node",
  "version": "2.0.0",
  "contributors": [
    "François-Xavier Thoorens <fx@ark.io>",
    "Kristjan Košič <kristjan@ark.io>",
    "Brian Faust <brian@ark.io>"
  ],
  "license": "MIT",
  "bin": {
    "ark:full:mainnet": "bin/start-relay-and-forger.js -c ./config/mainnet",
    "ark:full:devnet": "bin/start-relay-and-forger.js -c ./config/devnet",
    "ark:full:testnet": "bin/start-relay-and-forger.js -c ./config/testnet",
    "ark:relay:mainnet": "bin/start-relay.js -c ./config/mainnet",
    "ark:relay:devnet": "bin/start-relay.js -c ./config/devnet",
    "ark:relay:testnet": "bin/start-relay.js -c ./config/testnet",
    "ark:forge:mainnet": "bin/start-forger.js -c ./config/mainnet",
    "ark:forge:devnet": "bin/start-forger.js -c ./config/devnet",
    "ark:forge:testnet": "bin/start-forger.js -c ./config/testnet",
    "ark:snapshot:mainnet": "bin/snapshot.js -c ./config/mainnet",
    "ark:snapshot:devnet": "bin/snapshot.js -c ./config/devnet",
    "ark:snapshot:testnet": "bin/snapshot.js -c ./config/testnet"
  },
  "scripts": {
    "relay:mainnet": "node bin/start-relay.js -c ./config/mainnet",
    "relay:mainnet:watch": "nodemon bin/start-relay.js -c ./config/mainnet",
    "relay:devnet": "node bin/start-relay.js -c ../core-config/src/networks/devnet",
    "relay:devnet:watch": "nodemon bin/start-relay.js -c ./config/devnet",
    "relay:testnet": "node bin/start-relay.js -c ./config/testnet",
    "relay:testnet:watch": "nodemon bin/start-relay.js -c ./config/testnet",
    "forge:mainnet": "node bin/start-forger.js -c ./config/mainnet",
    "forge:mainnet:watch": "nodemon bin/start-forger.js -c ./config/mainnet",
    "forge:devnet": "node bin/start-forger.js -c ./config/devnet",
    "forge:devnet:watch": "nodemon bin/start-forger.js -c ./config/devnet",
    "forge:testnet": "node bin/start-forger.js -c ./config/testnet",
    "full:mainnet": "node bin/start-relay-and-forger.js -c ./config/mainnet",
    "full:devnet": "node bin/start-relay-and-forger.js -c ./config/devnet",
    "full:testnet": "node bin/start-relay-and-forger.js -c ./config/testnet",
    "full:testnet:2tier": "node bin/start-relay-and-forger.js -c ./config/testnet.1 --network-start & node bin/start-relay-and-forger.js -c ./config/testnet.2 --network-start",
    "forge:testnet:watch": "nodemon bin/start-forger.js -c ./config/testnet",
    "snapshot:mainnet": "node bin/snapshot.js -c ./config/mainnet",
    "snapshot:devnet": "node bin/snapshot.js -c ./config/devnet",
    "snapshot:testnet": "node bin/snapshot.js -c ./config/testnet",
    "test:watch": "jest --no-cache --watch --projects tests",
    "test:api": "jest --no-cache --forceExit --projects tests/api",
    "test:api:watch": "jest --no-cache --watch --projects tests/api",
    "test:unit": "jest --no-cache --forceExit --projects tests/unit",
    "test:unit:watch": "jest --no-cache --watch --projects tests/unit",
    "test:webhooks": "jest --no-cache --forceExit --projects tests/webhooks",
    "test:webhooks:watch": "jest --no-cache --watch --projects tests/webhooks",
    "lint": "eslint ./ --fix"
  },
  "dependencies": {
    "@arkecosystem/client": "^2.0.0",
    "@arkecosystem/core-api-p2p": "^1.0.0",
    "@arkecosystem/core-api-public": "^1.0.0",
    "@arkecosystem/core-commander": "^1.0.0",
    "@arkecosystem/core-config": "^1.0.0",
    "@arkecosystem/core-database": "^1.0.0",
    "@arkecosystem/core-database-sequelize": "^1.0.0",
    "@arkecosystem/core-forger": "^1.0.0",
    "@arkecosystem/core-logger": "^1.0.0",
    "@arkecosystem/core-blockchain": "^1.0.0",
    "@arkecosystem/core-logger-winston": "^1.0.0",
    "@arkecosystem/core-transaction-pool-redis": "^1.0.0",
    "@arkecosystem/core-webhooks": "^1.0.0",
    "assert-plus": "^1.0.0",
    "commander": "^2.14.0"
  },
  "devDependencies": {
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.16.2",
    "jest": "^22.3.0",
    "jest-extended": "^0.6.0",
    "request-promise": "^4.2.2",
    "sinon": "^4.4.2",
    "standard": "^10.0.3"
  }
}
