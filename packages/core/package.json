    "test:api": "jest --no-cache --forceExit --projects tests/api",
    "test:api:watch": "jest --no-cache --watch --projects tests/api",
    "test:unit": "jest --no-cache --forceExit --projects tests/unit",
    "test:unit:watch": "jest --no-cache --watch --projects tests/unit",
    "test:webhooks": "jest --no-cache --forceExit --projects tests/webhooks",
    "test:webhooks:watch": "jest --no-cache --watch --projects tests/webhooks",
    "lint": "eslint ./ --fix"
