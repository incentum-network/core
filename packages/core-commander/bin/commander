#!/usr/bin/env node

'use strict';

const fs = require('fs')
const expandHomeDir = require('expand-home-dir')
const { splash, getProcessStatus } = require('../lib/utils')

/**
 * [description]
 * @return {[type]} [description]
 */
const start = async () => {
  splash()

  process.env.ARK_CONFIG = expandHomeDir('~/.ark/config')

  if (!fs.existsSync(process.env.ARK_CONFIG)) await require('../lib/commands/configure-network')()

  require('../lib/commands/start')()
}

getProcessStatus(() => start())
